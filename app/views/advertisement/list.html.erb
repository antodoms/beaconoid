
<% if @advertisements.blank? %>
<p>There are no advertisements currently in the system.</p>
<% else %>
<p>These are the current advertisements in our system</p>

<ul id = "advertisements">
   <% @advertisements.each do |c| %>

   <li>   
   <%= link_to c.aID, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
   <b> <%= button_to "Delete", c, method: :delete, data: { confirm: "Are you sure you wish to delete ?" }, class: "btn btn-danger" %> </b>
   </li>
   
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new advertisement", {:action => 'new' }%></p>