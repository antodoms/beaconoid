<%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", id: "name" %>
  </div>
  <div class="form-group">
    <%= f.label :beacon %>
    <%= f.collection_select :beacon_id, Beacon.order(:name),:id,:name, {include_blank: "--Please select a Beacon--"}, {:class => "form-control", :required => true}  %>
  </div>
   <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:name),:id,:name, {include_blank: "--Please select a Category--"}, {:class => "form-control", id: "category", :required => true}  %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", id: "description", :required => true %>
  </div>
  <div class="form-group">
    <% if @advertisement.image.present? %>
      <%= link_to "Medium Size URL", @advertisement.image.url(:medium) %><br />
      <%= image_tag @advertisement.image.url(:medium) %><br/>
      <%= link_to "Thumbnail Size URL", @advertisement.image.url(:thumb) %><br />
      <%= image_tag @advertisement.image.url(:thumb) %><br/>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control", id: "image" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control", id: "price", :required => true %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>