<%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :beacon %>
    <%= f.collection_select :beacon_id, Beacon.order(:name),:id,:name, {include_blank: true}, {:class => "form-control"}  %>
  </div>
   <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:name),:id,:name, {include_blank: false}, {:class => "form-control"}  %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>