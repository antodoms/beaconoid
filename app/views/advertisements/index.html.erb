<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" id="k">
                Advertisements
            </h1>
			
	        <div id="page-wrapper">

                <div class="container-fluid">

                    <!-- Top Row with Charts -->
                    <div class="row">	
						<div class="well">
						  <%= link_to "New Advertisement", new_advertisement_path, class: "btn btn-primary" %>
						</div>

						<%= render "shared/flash_message" %>

						<table class="table table-bordered table-striped">
						  <thead>
						    <tr>
						      <th>Name</th>
						      <th>Beacon</th>
						      <th>Category</th>
						      <th>&nbsp;</th>
						      <th>&nbsp;</th>
						      <th>&nbsp;</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<%= form_tag({:action => 'filter'}, {:method => :post}) do %>
                  				<div class="form-group">
                    				<%= select_tag :filter_tag, options_for_select([
                    								['Advertisement', "advertisement_name"],
                               						['Beacon Name', "beacon_name"],
                               						['Category Name', "category_name"]
                               						]) %>
                    				<%= text_field_tag :filter_text%>               
                    				<%= submit_tag 'Search' %>
                  				</div>
                			<% end %>
						    <% if @advertisement.size == 0 %>
						      <tr>
						        <td colspan="6">No advertisements found.</td>
						      </tr>
						    <% else %>
						      <% @advertisement.each do |advertisement| %>
						        <tr>
						          <td><%= advertisement.name %></td>
						          <td><%= advertisement.beacon.name if advertisement.beacon.present? %></td>
						          <td><%= advertisement.category.name if advertisement.category.present? %></td>
						          <td>
						            <%= link_to "View", advertisement_path(advertisement), class: "btn btn-primary" %>
						          </td>
						          <td>
						            <%= link_to "Edit", edit_advertisement_path(advertisement), class: "btn btn-default" %>
						          </td>
						          <td>
						            <%= button_to "Delete", advertisement, method: :delete, data: { confirm: "Are you sure you wish to delete #{advertisement.name} ?" }, class: "btn btn-danger" %>
						          </td>
						        </tr>
						      <% end %>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>