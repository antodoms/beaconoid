

<h3><%= link_to 'View advertisements', '/app/views/advertisement/list' %> </h3>

<% if @beacons.blank? %>
<p>There are no beacons currently in the system.</p>
<% else %>
<p>These are the current beacons in our system</p>

<ul id = "beacons">
   <% @beacons.each do |c| %>

   <li>   
   <%= link_to c.bID, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
   <b> <%= button_to "Delete", c, method: :delete, data: { confirm: "Are you sure you wish to delete ?" }, class: "btn btn-danger" %> </b>
   </li>
   
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new beacon", {:action => 'new' }%></p>