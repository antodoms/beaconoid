
<!--Form for Beacon creation-->

<%= form_for @beacon do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :store %>
    <%= f.collection_select :store_id, Store.order(:name),:id,:name, {include_blank: true}, {:class => "form-control", :required => true}  %>
  </div>
  <div class="form-group">
    <%= f.label :current_status %>
    <%= f.text_field :current_status, class: "form-control", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :unique_reference %>
    <%= f.text_field :unique_reference, class: "form-control", :required => true %>
  </div>
  <div class="form-group">
  	<%= f.label :latitude %>
  	<%= f.text_field :latitude, class: "form-control", :required => true %>
  </div>

   <div class="form-group">
  	<%= f.label :longitude %>
  	<%= f.text_field :longitude, class: "form-control", :required => true %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>