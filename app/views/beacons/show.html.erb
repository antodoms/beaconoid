<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <%= @beacon.name %>: #<%= @beacon.unique_reference %>
            </h1>
			
	        <div id="page-wrapper">

                <div class="container-fluid">

                    <!-- Top Row with Charts -->
                    <div class="row">
						<p>
						   <strong>Beacon Name:</strong> <%= @beacon.name %><br />
						   <strong>Beacon ID:</strong> <%= @beacon.unique_reference %><br />
						   <strong>Store :</strong> <%= @beacon.store.name if @beacon.store.present? %><br />
						</p>

						<%= link_to 'Back' , {:action => 'index'} %>
					</div>

					<div class="row">	
						<div class="well">
						  <%= link_to "New Advertisement", new_beacon_advertisement_path(@beacon), class: "btn btn-primary" %>
						</div>

						<%= render "shared/flash_message" %>

						<table class="table table-bordered table-striped">
						  <thead>
						    <tr>
						      <th>Title</th>
						      <th>Category</th>
						      <th>Description</th>
						      <th>Price</th>
						      <th>&nbsp;</th>
						      <th>&nbsp;</th>
						    </tr>
						  </thead>
						  <tbody>
						    <% if @beacon.advertisements.size == 0 %>
						      <tr>
						        <td colspan="6">No advertisement found.</td>
						      </tr>
						    <% else %>
						      <% @beacon.advertisements.each do |advertisement| %>
						        <tr>
						          <td><%= advertisement.name %></td>
						          <td><%= advertisement.category.name if advertisement.category.present? %></td>
						          <td><%= advertisement.description %></td>
						          <td><%= advertisement.price %></td>
						          <td>
						            <%= link_to "Edit", edit_beacon_advertisement_path(@beacon,advertisement), class: "btn btn-default" %>
						          </td>
						          <td>
						            <%= button_to "Delete", advertisement, method: :delete, data: { confirm: "Are you sure you wish to delete #{advertisement.name} ?" }, class: "btn btn-danger" %>
						          </td>
						        </tr>
						      <% end %>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>