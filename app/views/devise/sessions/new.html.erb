<div class="vertical-center">  
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Please Sign In</h3>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Login ID" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "Enter password" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                
                  <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>

              </fieldset>
            <% end %>
            <%# render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>