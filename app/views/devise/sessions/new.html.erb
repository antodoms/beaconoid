<div class="vertical-center">  
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-offset-4">                
        <div class="login-panel panel panel-default col-md-5">                  
          <div class="panel-heading">
              <center><h3 class="panel-title">Welcome to BeaconOID</h3></center>
          </div>
          <div class="image col-md-6 pull-left"> 
            <img class="img-responsive" src="/assets/logo.png" alt="rss feed" />    
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Login ID" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "Enter password" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                
                  <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>

              </fieldset>
            <% end %>
            <%# render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>