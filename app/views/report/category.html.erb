<div class="container-fluid">
  	<div class="row">		
    	<div class="col-lg-12">
                <h2 class="page-header"> Monthly Beacon Usage in Categories </h2>
                <p class="lead">Popular Categories based on number of hits on Beacon Advertisements </a></p>
            </div>			
    	</div>
    	<div class="row">		
    		<div class="col-lg-11">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Usage of Beacons Category-wise</h3>
                    </div>
                    <div class="panel-body">
                        <div class="flot-chart">
                            <div class="flot-chart-content" id="flot-pie-chart">
                                <%= bar_chart @click_data_category, width: 1000 %>
                            </div>
                        </div>
                        <div class="text-right">
                            <table class="table table-hover">
								<thead>
							      <tr>
							        <th>Id</th>
							        <th>Category Name</th>
							        <th> Number of Hits </th>
							      </tr>
							    </thead>
							    <tbody>
							      <% @click_data_category.each do |category| %>
							      	<tr>
							      		<td style="text-align: left"><%= category[2] %></td>
	                            		<td style="text-align: left"><%= link_to "#{category[0]}", category_path(id: category[2]) %></td>
	                            		<td style="text-align: left"><%= category[1] %></td>
	                            	</tr>
	                            <% end %>
							    </tbody>
							</table>

                            <ul class="pagination">
                                <% (1..@click_data_count).each do |x| %>
                                  <li><%= link_to x,report_category_path(:click_page => params[:fetch_page], :click_page => x) %></li>
                                <% end %>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
    			
    		
    		