<div class="container-fluid">
  	<div class="row">		
    	<div class="col-lg-12">
                <h2 class="page-header">Monthly Store Sale Report</h2>
                <p class="lead">A comparison of Sale in Stores with Beacons and Sale in Stores without Beacons</a></p>
            </div>			
    	</div>
    	<div class="row">		
    		<div class="col-lg-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Stores Without Beacons</h3>
                    </div>
                    <div class="panel-body">
                        <div class="flot-chart">
                            <div class="flot-chart-content" id="flot-pie-chart">
                                <%= pie_chart @store_without_beacon, width: 1000 %>
                            </div>
                        </div>
                        <div class="text-right">
                            <table class="table table-hover">
								<thead>
							      <tr>
							        <th>Id</th>
							        <th>Store Name</th>
							        <th>Sale</th>
							      </tr>
							    </thead>
							    <tbody>
							      <% @store_without_beacon.each do |store| %>
							      	<tr>
							      		<td style="text-align: left"><%= store[2] %></td>
	                            		<td style="text-align: left"><%= link_to "#{store[0]}", edit_store_path(id: store[2]) %></td>
	                            		<td style="text-align: left"><%= store[1] %></td>
	                            	</tr>
	                            <% end %>
							    </tbody>
							</table>

                            <ul class="pagination">
                                <% (1..@store_without_beacon.count).each do |x| %>
                                  <li><%= link_to x, report_sales_path(:with_beacon => params[:with_beacon], :without_beacon => x) %></li>
                                <% end %>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

    			
    		<div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Stores With Beacons </h3>
                    </div>
                    <div class="panel-body">
                        <div class="flot-chart">
                            <div class="flot-chart-content" id="flot-bar-chart">
                                <%= pie_chart @store_with_beacon, width: 500 %>
                            </div>
                        </div>
                        <div class="text-right">
                            <table class="table table-hover">
                                <thead>
                                  <tr>
                                    <th>Id</th>
                                    <th>Store Name</th>
                                    <th>Sale</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% @store_with_beacon.each do |store| %>
                                    <tr>
                                        <td style="text-align: left"><%= store[2] %></td>
                                        <td style="text-align: left"><%= link_to "#{store[0]}", edit_store_path(id: store[2]) %></td>
                                        <td style="text-align: left"><%= store[1] %></td>
                                    </tr>
                                <% end %>
                                </tbody>
                            </table>

                            <ul class="pagination">
                                <% (1..@store_with_beacon.count+1).each do |x| %>
                                  <li><%= link_to x,report_sales_path(:with_beacon => x, :with_beacon => params[:with_beacon]) %></li>
                                <% end %>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  
</div>

    		