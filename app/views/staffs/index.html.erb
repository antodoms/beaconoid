<div class="container-fluid">
  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
          Staff
      </h1>

      <div id="page-wrapper">
        <div class="container-fluid">
          <!-- Top Row with Charts -->
          <div class="row">
            <div class="well">
              <%= link_to "New Staff", new_staff_path, class: "btn btn-primary" %>
            </div>

            <%= render "shared/flash_message" %>

            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% if @users.size == 0 %>
                  <tr>
                    <td colspan="6">No staff found.</td>
                  </tr>
                <% else %>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.role %></td>
                      <td>
                        <%= link_to "Edit", edit_staff_path(user), class: "btn btn-default" %>
                      </td>
                      <td>
                        <%= button_to "Delete", staff_path(user), method: :delete, data: { confirm: "Are you sure you wish to delete #{user.name} ?" }, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>