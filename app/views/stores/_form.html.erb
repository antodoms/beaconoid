<%= form_for @store do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :unique_id %>
    <%= f.text_field :unique_id, class: "form-control", :required => true %>
  </div>
  <div class="form-group">
  	<%= f.label :image_url %>
  	<%= f.text_field :image_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sales %>
    <%= f.text_field :sales, class: "form-control" %>
  </div>  
  <%= f.submit class: "btn btn-primary" %>
<% end %>