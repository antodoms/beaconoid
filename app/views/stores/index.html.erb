<div class="container-fluid">
  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <%= render "shared/flash_message" %>
      <div id="page-wrapper">
        <div class="container-fluid">
          <!-- Top Row with Charts -->
          <h1 class="page-header" id="k"> Stores </h1>
          <div class="well">
            <%= link_to "New Store", new_store_path, class: "btn btn-primary" %>
          </div>

          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Store Code</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
             
                <%= form_tag({:action => 'filter'}, {:method => :post}) do %>
                  <div class="form-group">
                    <%= select_tag :filter_tag, options_for_select([['ID', "id"],
                               ['Store Name', "store_name"],
                               ['Store Code', "store_code"],
                               ['Store Sale', "store_sale"]
                               ]) %>
                    <%= text_field_tag :filter_text%>               
                    <%= submit_tag 'Search' %>
                  </div>
                <% end %>
                <% if @store.size == 0 %>
                  <tr>
                    <td colspan="6">No store found.</td>
                  </tr>
                <% else %>
                  <% @store.each do |store| %>
                    <tr>
                      <td><%= store.id %></td>
                      <td><%= store.name %></td>
                      <td><%= store.unique_id %></td>
                      <td><%= store.sales %></td>

                      <td>
                        <%= link_to "Edit", edit_store_path(store), class: "btn btn-default" %>
                      </td>
                      <td>
                      <%= button_to "Delete", store, method: :delete, data: { confirm: "Are you sure you wish to delete #{store.name} ?" }, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>