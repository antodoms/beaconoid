<h1>Store</h1>
<div class="well">
  <%= link_to "New Store", new_store_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @stores.size == 0 %>
      <tr>
        <td colspan="6">No store found.</td>
      </tr>
    <% else %>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= store.code %></td>
          <td>
            <%= link_to "Edit", edit_store_path(store), class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "Delete", store, method: :delete, data: { confirm: "Are you sure you wish to delete #{store.name} ?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>