<div class="container-fluid">
  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
          Stores
          <small> Add | Edit | Remove | Stores</small>
      </h1>

      <div id="page-wrapper">
        <div class="container-fluid">
          <!-- Top Row with Charts -->
          <div class="row">
            <div class="well">
              <%= link_to "New Store", new_store_path, class: "btn btn-primary" %>
            </div>

            <%= render "shared/flash_message" %>

            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Store Code</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% if @stores.size == 0 %>
                  <tr>
                    <td colspan="6">No store found.</td>
                  </tr>
                <% else %>
                  <% @stores.each do |store| %>
                    <tr>
                      <td><%= store.id %></td>
                      <td><%= store.name %></td>
                      <td><%= store.unique_id %></td>
                      <td>
                        <%= link_to "Edit", edit_store_path(store), class: "btn btn-default" %>
                      </td>
                      <td>
                        <%= button_to "Delete", store, method: :delete, data: { confirm: "Are you sure you wish to delete #{store.name} ?" }, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>